{
    "compilerOptions": {
      "target": "ES2021",
      "useDefineForClassFields": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "node",
      "resolveJsonModule": false,
      "isolatedModules": true,
  
      "noEmit": false,
      "jsx": "react",
      "types": ["vite/client"]
     
  
    },
     //include tsx files
    "include": ["src/*", "types", "src/custom.d.ts", "vite-env.d.ts", "vite.config.ts", "src/**/*.tsx", "aws-exports.js", "src/aws-exports.d.ts", "src/**/*.ts"],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ],
    "references": [{ "path": "./tsconfig.node.json" }]
  }