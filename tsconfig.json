{
    "compilerOptions": {
      "target": "esnext",
      "useDefineForClassFields": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
  
      "noEmit": true,
      "jsx": "preserve",
      "types": ["vite/client"]
     
  
    },
     //include tsx files
    "include": ["src/*", "types", "src/custom.d.ts", "vite-env.d.ts", "vite.config.ts", "src/**/*.tsx", "aws-exports.js", "src/aws-exports.d.ts"],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ],
    "references": [{ "path": "./tsconfig.node.json" }]
  }