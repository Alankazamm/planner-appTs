{
    "compilerOptions": {
      "target": "esnext",
      "useDefineForClassFields": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": false,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ES6",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "react-dom": ["react-dom-client"]
      },
      "sourceMap": true,
      "noEmit": false ,
      "jsx": "react",
      "types": ["vite/client"],
     
     
  
    },
     //include tsx files
    "include": ["*/**/*.ts","src/*", "types", "src/custom.d.ts", "vite-env.d.ts", "vite.config.ts", "src/**/*.tsx", "aws-exports.js", "src/aws-exports.d.ts", "react-dom-client.d.ts"],
    "exclude": [
      
      "**/*.spec.ts",
  ],
    "references": [{ "path": "./tsconfig.node.json" }]
  }